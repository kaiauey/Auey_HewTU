<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HewTU.RegisterPage"
             Title="RegisterPage">

        <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="#FFF2EED4">
            <Label Text="HEW TU" FontSize="Large" HorizontalTextAlignment="Center"></Label>
            <Label Text="DELIVERY APP" FontSize="Large" HorizontalTextAlignment="Center"></Label>
            <Entry Placeholder="Email"></Entry>
            <Entry Placeholder="Password"></Entry>

            <Label Text="Forgot Password" HorizontalTextAlignment="End" HorizontalOptions="End"></Label>
        
            <Grid ColumnDefinitions="*" RowDefinitions="*,*" RowSpacing="10">
                <Button Grid.Column="0" Text="Login" BackgroundColor="HotPink"></Button>
            <Label Grid.Row="1" Text="Don't have an account? Create an account" HorizontalTextAlignment="Center"></Label>
            </Grid>
            
        </VerticalStackLayout>
</ContentPage>